<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:orientation="vertical"
    tools:context="com.ar.wins.masakuy.EmailVerificationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:text="Verifikasi Akun"
        android:textSize="24dp"
        />

    <Button
        android:id="@+id/bt_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        style="?android:attr/borderlessButtonStyle"
        android:textAllCaps="false"
        android:text="Link verifikasi telah dikirim ke email anda. Mohon verifikasi akun melalui email anda. Klik disini untuk mengirim ulang email verifikasi"/>

    <TextView
        android:id="@+id/tv_status_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"/>

</LinearLayout>
