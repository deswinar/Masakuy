<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk Masakuy"
        android:textSize="24dp"
        android:layout_gravity="center"
        android:layout_margin="4dp"/>

    <EditText
        android:id="@+id/et_masuk_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Email"/>

    <EditText
        android:id="@+id/et_masuk_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:hint="Password"/>

    <Button
        android:id="@+id/bt_masuk_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="8dp"
        android:text="Masuk"
        android:textColor="#ffffff"
        android:background="@drawable/shadow_button" />

    <TextView
        android:id="@+id/bt_masuk_masuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="4dp"
        android:text="Belum punya akun? Daftar disini."
        />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/bt_masuk_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="center"/>

</LinearLayout>